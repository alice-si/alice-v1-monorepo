{{> header }}

<table cellspacing="0" cellpadding="0" border="0" width="100%">
  <tr>
    <td
      style="padding: 10px 50px 30px 50px; font-size: 16px; mso-height-rule: exactly; line-height: 20px;">
      <p>
        Hello {{user.firstName}},<br/><br/>
        Click on the link below to reset your password.
      </p>

      <table style="margin: 0 !important;">
        <tr>
          <td style="background: #1998a2; border: 7px solid #1998a2; text-align: center;"
              class="button-td">
            <a href="{{host}}/passwordChange/{{user.passwordChangeToken}}"
                style="background: #1998a2; font-size: 20px; line-height: 1.1; text-align: center; text-decoration: none; display: block;"
                class="button-a">
              &nbsp;&nbsp;&nbsp;&nbsp;<span style="color:#ffffff">Reset your password</span>&nbsp;&nbsp;&nbsp;&nbsp;
            </a>
          </td>
        </tr>
      </table>

    </td>
  </tr>
</table>

{{> footer }}
